<h1>Edit <%= @sub.title %> =D</h1>

<form action=" <%= sub_url(@sub) %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>

  <label for="title">Title:</label><br>
  <input id="title" type="text" name="sub[title]" value="<%= @sub.title %>"><br>

  <label for="description">Description</label><br>
  <textarea id="description" name="sub[description]"
    rows="8" cols="40"><%= @sub.description %></textarea><br>

  <input type="submit" value="Submit Sub">
</form>
