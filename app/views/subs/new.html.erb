<h1>Create A New Sub! =D</h1>

<form action=" <%= subs_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>

  <label for="title">Title:</label><br>
  <input id="title" type="text" name="sub[title]"><br>

  <label for="description">Description</label><br>
  <textarea id="description" name="sub[description]" rows="8" cols="40"></textarea><br>

  <input type="submit" value="Submit Sub">
</form>
